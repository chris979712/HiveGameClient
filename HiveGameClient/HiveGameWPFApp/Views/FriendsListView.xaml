<Page x:Class="HiveGameWPFApp.Views.FriendsListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HiveGameWPFApp.Views"
      xmlns:p="clr-namespace:HiveGameWPFApp.Properties"
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="1280">

    <DockPanel>
        <!-- Fondo -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Width="1297">
            <Grid>
                <Border>
                    <Border.Background>
                        <ImageBrush ImageSource="/Images/Background/MainMenuBackground.png" Stretch="UniformToFill" />
                    </Border.Background>
                </Border>

                <!-- Contenedor Principal -->
                <DockPanel>
                    <!-- Panel de Botones a la Izquierda -->
                    <StackPanel DockPanel.Dock="Left" Width="200" Background="#1C1C1C" Margin="5">
                        <Button x:Name="BtnAmigosJuego" Content="Amigos del Juego" Height="50" 
                                Margin="5" FontSize="16" 
                                Background="#FFC300" Foreground="Black"
                                Click="BtnAmigosJuego_Click">
                            <Button.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                            </Button.Effect>
                        </Button>

                        <Button x:Name="BtnSolicitudes" Content="Solicitudes" Height="50" 
                                Margin="5" FontSize="16"
                                Background="#FFC300" Foreground="Black"
                                Click="BtnSolicitudes_Click">
                            <Button.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                            </Button.Effect>
                        </Button>

                        <Button x:Name="BtnAñadir" Content="Añadir" Height="50"
                                Margin="5" FontSize="16"
                                Background="#FFC300" Foreground="Black"
                                Click="BtnAñadir_Click">
                            <Button.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>

                    <!-- Paneles para Cada Sección -->
                    <Grid>
                        <!-- Panel de Amigos del Juego -->
                        <StackPanel x:Name="PanelAmigosJuego" Visibility="Visible">
                            <TextBox x:Name="TxtBuscarAmigo" Width="200" Margin="10"
                                     Background="#1C1C1C" Foreground="White" BorderBrush="#FFC300" BorderThickness="2">
                                <TextBox.Effect>
                                    <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                                </TextBox.Effect>
                            </TextBox>

                            <Button Content="Buscar" Width="100" Height="30" Margin="10" 
                                    Background="#FFC300" Foreground="Black">
                                <Button.Effect>
                                    <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                                </Button.Effect>
                            </Button>

                            <ListView x:Name="ListaAmigos" Margin="10" Background="#1C1C1C">
                                <!-- Estilo de cada ítem de la lista -->
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Image Source="{Binding FotoPerfil}" Width="50" Height="50" Margin="5"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Apodo}" FontSize="16" Foreground="White"/>
                                                <TextBlock Text="{Binding Estado}" FontSize="14">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Estado}" Value="En linea">
                                                                    <Setter Property="Foreground" Value="Gold"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Estado}" Value="Desconectado">
                                                                    <Setter Property="Foreground" Value="Gray"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Panel de Enviar Mensajes -->
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <TextBox x:Name="TxtMensaje" Width="300" Height="50" Margin="5"
                                         Background="#1C1C1C" Foreground="White" BorderBrush="#FFC300" BorderThickness="2">
                                    <TextBox.Effect>
                                        <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                                    </TextBox.Effect>
                                </TextBox>

                                <Button Content="Enviar" Width="100" Height="50" Margin="5" 
                                        Background="#FFC300" Foreground="Black">
                                    <Button.Effect>
                                        <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                                    </Button.Effect>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Panel de Solicitudes -->
                        <StackPanel x:Name="PanelSolicitudes" Visibility="Collapsed">
                            <ListView x:Name="ListaSolicitudes" Margin="10" Background="#1C1C1C">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Image Source="{Binding FotoPerfil}" Width="50" Height="50" Margin="5"/>
                                            <TextBlock Text="{Binding Nombre}" FontSize="16" Foreground="White" Margin="5"/>
                                            <Button Content="Aceptar" Width="100" Height="30" Margin="5"
                                                    Background="#FFC300" Foreground="Black"/>
                                            <Button Content="Rechazar" Width="100" Height="30" Margin="5"
                                                    Background="#FFC300" Foreground="Black"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <!-- Panel de Añadir Amigos -->
                        <StackPanel x:Name="PanelAñadir" Visibility="Collapsed">
                            <TextBox x:Name="TxtBuscarNuevoAmigo" Width="200" Margin="10"
                                     Background="#1C1C1C" Foreground="White" BorderBrush="#FFC300" BorderThickness="2">
                                <TextBox.Effect>
                                    <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                                </TextBox.Effect>
                            </TextBox>

                            <Button Content="Buscar" Width="100" Height="30" Margin="10" 
                                    Background="#FFC300" Foreground="Black">
                                <Button.Effect>
                                    <DropShadowEffect Color="Black" ShadowDepth="3" Opacity="0.5" BlurRadius="10"/>
                                </Button.Effect>
                            </Button>

                            <ListView x:Name="ListaNuevosAmigos" Margin="10" Background="#1C1C1C">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Image Source="{Binding FotoPerfil}" Width="50" Height="50" Margin="5"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Apodo}" FontSize="16" Foreground="White"/>
                                                <TextBlock Text="{Binding Estado}" FontSize="14">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Estado}" Value="En linea">
                                                                    <Setter Property="Foreground" Value="Gold"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Estado}" Value="Desconectado">
                                                                    <Setter Property="Foreground" Value="Gray"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            <Button Content="Añadir" Width="100" Height="30" Margin="5"
                                                    Background="#FFC300" Foreground="Black"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Grid>
                </DockPanel>
            </Grid>
        </ScrollViewer>
    </DockPanel>

</Page>
